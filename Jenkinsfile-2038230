pipeline {
  agent any
  tools {
    maven 'maven'
  }
  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')
    disableConcurrentBuilds()
  }
  stages {
    stage ('Build (phkbzp)') {
      steps {
        sh script: 'mvn clean ', label: 'dwtu5j'
        sh script: 'mvn test ', label: '6v3qdc'
        sh script: 'mvn install -Dmaven.test.skip=true', label: 'rs0v11'
      } //end steps
    } // end stage Build
    stage ('Deploy (udkjn6)') {
      steps {
        script {
		docker.withTool('docker'){
			docker.withRegistry('https://artifactory.dagility.com', ''){
				sh 'docker build -t artifactory.dagility.com/docker/vkac-backend:latest .'
			sh 'docker push artifactory.dagility.com/docker/vkac-backend:latest'
			}
		}
	}
	script { sh script: 'sleep 0.005', label: 'fmw4o7'}

        sh script: '''
ln -sf /usr/local/bin/helm3 /usr/local/bin/helm
''', label: 'rlklcw'
        sh script: 'helm package chart', label: 'ijhrf0'
        withCredentials([   usernamePassword(credentialsId: '', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
   	script {
		sh "curl -u$USER:$PASS -T vkac-backend-chart-0.1.0.tgz 'https://artifactory.dagility.com/artifactory/helm-local/vkac-backend-chart-0.1.0.tgz' "
	}


        script { sh script: 'sleep 0.005', label: '4j2evm'}
} // end step group
        sh script: 'helm repo add vkac-backend https://artifactory.dagility.com/artifactory/helm ', label: 'rvsu01'
        sh script: 'helm repo update', label: 'mesfnb'
        sh script: 'helm upgrade vkac-backend-deployment vkac-backend/vkac-backend-chart --install --values chart-values.yaml --namespace default --set ingress.hosts[0].host=vkac-backend-default.dagility.com', label: 'ixxrui'
      } //end steps
    } // end stage Deploy
  }
}
